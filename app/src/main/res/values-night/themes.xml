<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DarkMode" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_300</item>
        <item name="colorPrimaryVariant">@color/dark_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_300</item>
        <item name="colorSecondaryVariant">@color/dark_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/DarkModeActionBar</item>
        <item name="android:textColor">@color/primary_dark_text</item>
        <item name="android:textColorSecondary">@color/secondary_dark_text</item>
        <!--    Background Dasar: Putih - item    -->
        <item name="android:windowBackground">@color/dark_500</item>

        <!--    Background Dasar: Putih - item    -->
        <item name="background">@color/dark_300</item>

        <!--    Background appbar: biru - item    -->
        <item name="backgroundTint">@color/dark_700</item>

        <!--    Background AppBar: putih - item   -->
        <item name="backgroundColor">@color/dark_700</item>

        <!--    For Selector    -->
        <item name="itemTextAppearanceActive">@color/dark_700</item>
        <item name="itemTextAppearanceInactive">@color/neutral_500</item>
    </style>


    <!--  STYLING ACTION BAR  -->

    <style name="Theme.DarkMode.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DarkMode.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DarkMode.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DarkModeActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:background">@color/dark_700</item>
    </style>
    <!--  Splash Screen  -->
    <style name="Theme.DarkMode.NoActionBar.SplashScreen">
        <item name="android:windowBackground">@color/dark_700</item>
    </style>
</resources>